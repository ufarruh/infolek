<div class="center_div">
  <div class="row">
  <div class="text-center form-group col-xs-12">
    <h1>Search Drugs</h1>
    <%= search_form_for @q do |f| %>
      <%= f.search_field :title_start, placeholder: "Search drugs...", class: "form-control" %>
      <br />
      <div class="row">
        <div class="col-sm-12" style="text-align: center">
          <%= button_tag(type: "submit", class: "btn btn-primary search-btn") do %>
              Search
          <% end %>
        </div>
      </div>

    <% end %>
  </div>
  </div>

  <%= render "results" %>

</div>
